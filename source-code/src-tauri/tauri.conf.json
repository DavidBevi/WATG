{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "watg",
  "version": "0.3.0",
  "identifier": "davidbevi.watg",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost"
    }
  },
  "plugins": {
    "pluginReportTitle": {
      "invoke": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icon.svg",
      "icon.png",
      "icon.ico"
    ]
  }
}
